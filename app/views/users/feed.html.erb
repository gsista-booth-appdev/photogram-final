
<h1><%= @the_user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @the_user.private %></dd>

  <dt>Followers</dt>
  <dd><%= @the_user.received_follow_requests_count %></dd>

  <dt>Following</dt>
  <dd><%= @the_user.sent_follow_requests_count %></dd>
</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Feed (<%= @the_user.followers %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

 <% @the_user.feed.each do |user| %>
  <tr>
    <td>
      <img src="<%= user.image %>">
    </td>

    <td>
      <%= user.owner.username %>
    </td>

    <td>
      <%= user.caption %>
    </td>

    <td>
      <%= time_ago_in_words(user.updated_at) %>
    </td>

    <td>
      <%= user.likes_count %>
    </td>

    <td>
      <a href="/photos/<%= user.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>

</body>
